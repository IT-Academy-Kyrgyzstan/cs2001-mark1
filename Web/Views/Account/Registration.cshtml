@model Web.Models.RegisterModel

@{
    ViewData["Title"] = "Registration";
}

<div class="text-center">
    <h1>Registration</h1>
    <br />
    <form asp-action="Registration" asp-controller="Account" asp-anti-forgery="true">
        <div>
            <div class="form-group">
                <input type="text" asp-for="Name" placeholder="Name" />
                <span asp-validation-for="Name" />
            </div>            
            <div class="form-group">
                <input asp-for="Login" placeholder="Login" />
                <span asp-validation-for="Login" />
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="PasswordConfirm" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div class="form-group">
                <input asp-for="Phone" placeholder="Phone" />
                <span asp-validation-for="Phone" />
            </div>
            <div class="form-group">
                <button>Register</button>
            </div>
        </div>
    </form>
</div>


