@model Web.Models.LoginModel

@{
    ViewData["Title"] = "Авторизация";
}

<div class="text-center">
    <h1>Авторизация</h1>
    <br />
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <input type="text" asp-for="Login" placeholder="Логин" />
                <span asp-validation-for="Login" />
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="Пароль" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" />
            </div>
            <div class="form-group">
                <button type="button" onclick="location.href='@Url.Action("Registration", "Account")'">Registration</button>
            </div>
        </div>
    </form>
</div>
